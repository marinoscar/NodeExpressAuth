<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <form role="form">
            <legend><h1>Login to your account</h1></legend>
            <div class="form-group form-group-lg">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="email" class="form-control input-lg" id="UserName" name="UserName" placeholder="Enter your email">
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="email" class="form-control input-lg" id="Password" name="Password" placeholder="Enter your password">
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="form-group col-xs-12">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa fa-check pad-r-10"></i>
                            Login
                        </button>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-github pad-r-10"></i>
                            Sign up with Github
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>